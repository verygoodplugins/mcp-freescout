{
  "name": "@verygoodplugins/mcp-freescout",
  "version": "2.0.0",
  "description": "MCP server for FreeScout ticket management and workflow automation",
  "main": "dist/index.js",
  "type": "module",
  "mcpName": "io.github.verygoodplugins/mcp-freescout",
  "bin": {
    "mcp-freescout": "dist/index.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "jest --passWithNoTests",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "format": "prettier --write \"src/**/*.ts\" \"*.md\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"*.md\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "mcp-server",
    "modelcontextprotocol",
    "freescout",
    "helpdesk",
    "ticket-management",
    "workflow-automation"
  ],
  "author": "Very Good Plugins",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/verygoodplugins/mcp-freescout.git"
  },
  "homepage": "https://github.com/verygoodplugins/mcp-freescout#readme",
  "bugs": {
    "url": "https://github.com/verygoodplugins/mcp-freescout/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "dotenv": "^16.3.1",
    "isomorphic-dompurify": "^2.16.0",
    "marked": "^17.0.0",
    "node-fetch": "^3.3.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "eslint": "^9.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.4.6",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.0.0"
  }
}
